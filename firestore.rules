rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to the list of startups and individual startup documents
    match /startups/{startupId} {
      allow read, list: if true;
    }

    // Allow public read access to all milestones in any subcollection
    match /startups/{startupId}/milestones/{milestoneId} {
       allow read: if true;
    }
    
    // Allow anyone to submit (create) a new milestone for any startup
    match /startups/{startupId}/milestones/{document=**} {
      allow create: if true;
    }
  }
}
