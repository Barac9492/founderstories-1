rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /startups/{startupId} {
      allow read: if true;
      allow write: if false; // Protect against client-side writes for now

      match /milestones/{milestoneId} {
      	allow read: if true;
        allow create: if true; // Allow users to submit milestones
        allow update, delete: if false; // Protect against updates/deletes
      }
    }
  }
}
